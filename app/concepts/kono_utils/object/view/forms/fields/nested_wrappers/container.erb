<div class="kono_utils_single_nested_container" id="<%= container_id %>">

  <%= concept("cell/forms/container", model,
              form_attributes: form_attributes,
              context: {form: form, base_class: base_class}
      ) %>

  <%= concept("cell/forms/fields/nested_wrappers/remove_button", form.object,
              remove_target: container_id,
              context: {form: form, base_class: base_class}) if policy(form.object).destroy? and show_remove_button? %>
</div>
